#include "msp.h"

void LED_init()
{
    P1->DIR |= BIT0;//设置为输出
}


void LED_toggle()
{
    P1->DIR ^= BIT0;//设置为输出
}


void soft_ware_delay(int n)
{
    while(n--);
}


void main(void)
{
	WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer
	LED_init();
	while(1)
	{
	    int i ;
	    for(i = 0 ;i < 5000; i++)
	    {
	        soft_ware_delay(50000);
	        LED_toggle();
	    }
	}
}
